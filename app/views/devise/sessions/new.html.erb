  <form class="simple_form new_user" id="new_user" novalidate="novalidate" action="/users/sign_in" accept-charset="UTF-8" method="post">
    <h2>Log in</h2>
    <input type="hidden" name="authenticity_token" value="5cyrv_9TovZ4Go_n1byC3pxKzAj3hmpNAcAxBE0ELve-BgTNaK2-qLZ4CpNbzhEYCy9iTfS80Sn34JPJB-SPng" autocomplete="off">
      <div class="form-inputs">
        <div class="mb-3 email optional user_email">
          <label class="form-label email optional" for="user_email">Email</label>
          <input class="form-control string email optional" autocomplete="email" autofocus="autofocus" type="email" value="" name="user[email]" id="user_email">
