<h1>Create your skis</h1>

<%= form_for(@ski) do |f| %>
  <div class=“mb-3”>
    <%= f.label :brand %>
    <%= f.text_field :brand %>
  </div>
  <div class=“mb-3”>
    <%= f.label :category %>
    <%= f.text_field :category %>
  </div>
    <div class=“mb-3”>
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>
  <div class=“mb-3”>
    <%= f.label :sizing %>
    <%= f.number_field :sizing %>
  </div>
  <div class=“mb-3”>
    <%= f.label :price %>
    <%= f.number_field :price %>
  </div>
  <div class=“mb-3”>
  <%= f.submit "Create", class: "btn btn-primary" %>
  </div>
<% end %>
