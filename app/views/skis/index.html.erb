<div class="container">
  <div class="row d-flex justify-content-between mb-3">
    <div class="col-8">
      <h2>Notre meilleure s√©lection</h2>
    </div>
    <div class="col-4 d-flex align-items-center">
      <div class="rentyourskisbutton"><%= link_to 'Proposez vos skis', new_ski_path %></div>
    </div>
  </div>


  <div class="row d-flex justify-content-between">
    <div class="cards">
      <% @skis.each do |ski| %>
        <%= link_to ski_path(ski) do %>
        <div class="card-category mt-3" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path ski.photo.key, height: 600, crop: :fill %>')">
          <div class="brand-on-card">
            <%= ski.brand %>
          </div>
          <div class="price-on-card">
            <%= ski.price %>
          </div>
        </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
<br>
<br>

<div style="width: 100%; height: 600px;"
  data-controller="mapbox"
  data-mapbox-markers-value="<%= @markers.to_json %>"
  data-mapbox-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
</div>
